<Window x:Class="UserInterfaceLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views = "clr-namespace:UserInterfaceLayer.View"
        xmlns:ViewModel = "clr-namespace:UserInterfaceLayer.ViewModel"
        mc:Ignorable="d"
        Title="Plannovative" Height="720" Width="1080">

        <Window.DataContext>
            <ViewModel:MainWindowViewModel />
        </Window.DataContext>

    <Window.Resources>
        <DataTemplate DataType="{x:Type ViewModel:PlannovativeViewModel}">
            <views:PlannovativeView />
        </DataTemplate>

    </Window.Resources>

    <Grid x:Name="MainContent">
        <ContentControl Content="{Binding CurrentViewModel}"/>
    </Grid>
</Window>
